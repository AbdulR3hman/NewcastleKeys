{% include "header.twig" %}

{% block navContainer %}
	{% include "navContainer.twig" %}
{% endblock navContainer %}
<body>
	<div class = "row">
	{% include "sidebar.twig" %}

	{% block removeusers %}
		<div class="col-sm-8">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">
						Admin Error Log
					</h3>
				</div>
				<div class="panel-body">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Date</th>
									<th>Message</th>
									<th>Type</th>
									<th>File</th>
									<th>Line</th>
								</tr>
							</thead>
							<tbody>
							{% for error in errors %}
								<tr>
									<td>{{error.date}}</td>
									<td>{{error.message}}</td>
									<td>{{error.type}}</td>
									<td>{{error.file}}</td>
									<td>{{error.line}}</td>
								</tr>
								
							{% endfor %}
							</tbody>
						</table>
					<ul class="pagination">
						{% for i in minPages..maxPages %}
							<li><a href="{{base}}/admin?page={{i}}">{{i}}</a></li>
						{% endfor %}
					</ul>

				</div>
			</div>
		</div>
	</div>

	{% block notifications %}
		<div class="col-sm-4">
			{% if state is defined %}
		 	<div class="alert alert-warning">{{state}}</div>
			{% endif %}
		</div>
	{% endblock notifications %}
	
{% endblock removeusers %}
</body>
<script type="text/javascript">
	$('.dropdown-toggle').dropdown();
</script>
{% include "footer.twig" %}


